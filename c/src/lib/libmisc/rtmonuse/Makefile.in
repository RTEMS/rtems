@SET_MAKE@
srcdir = @srcdir@
VPATH = @srcdir@
RTEMS_ROOT = @top_srcdir@
PROJECT_ROOT = @PROJECT_ROOT@

LIB=${ARCH}/librtmonuse-tmp.a

# C source names, if any, go here -- minus the .c
C_PIECES=rtmonuse
C_FILES=$(C_PIECES:%=%.c)
C_O_FILES=$(C_PIECES:%=${ARCH}/%.o)

H_FILES=
INSTALLED_H_FILES=$(srcdir)/rtmonuse.h

SRCS=$(C_FILES) $(H_FILES) $(INSTALLED_H_FILES)
OBJS=$(C_O_FILES)

include $(RTEMS_ROOT)/make/custom/$(RTEMS_BSP).cfg
include $(RTEMS_ROOT)/make/lib.cfg

#
# (OPTIONAL) Add local stuff here using +=
#

DEFINES  +=
CPPFLAGS += -I.
CFLAGS   +=

LD_PATHS  +=
LD_LIBS   +=
LDFLAGS   +=

#
# Add your list of files to delete here.  The config files
#  already know how to delete some stuff, so you may want
#  to just run 'make clean' first to see what gets missed.
#  'make clobber' already includes 'make clean'
#

CLEAN_ADDITIONS +=
CLOBBER_ADDITIONS +=

${LIB}: ${SRCS} preinstall ${OBJS}
	$(make-library)

all: ${ARCH} $(SRCS) preinstall $(LIB)

preinstall:
	$(INSTALL) -m 444 ${INSTALLED_H_FILES} $(PROJECT_INCLUDE)/rtems
